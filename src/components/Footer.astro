---
import { Youtube, Instagram, Facebook, Linkedin, Phone } from "lucide-astro";

const socialLinks = [
  { url: "https://api.whatsapp.com/send?phone=573012663664", Icon: Phone },
  { url: "https://www.youtube.com/@funmaleua", Icon: Youtube },
  { url: "https://www.instagram.com/funmaleua/", Icon: Instagram },
  { url: "https://www.facebook.com/Funmaleua", Icon: Facebook },
  { url: "https://www.linkedin.com/company/maleua/", Icon: Linkedin },
];
---

<footer class="footer feature-section cream fade-in-up">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-info">
        <h3>Información de contacto VeciApp</h3>
        <p><a href="mailto:veciapp@maleua.org">veciapp@maleua.org</a></p>
        <p><a href="tel:+573012663664">(+57) 324 4015748</a></p>
        <p>
          Calle 25 #2-107<br />
          Barrio El Prado<br />
          Santa Marta, Colombia
        </p>
      </div>
      <div class="footer-projects">
        <h3>Redes sociales de Veciapp</h3>
        <p>
          <a
            href="https://www.instagram.com/veci.app/"
            target="_blank"
            rel="noopener noreferrer">Instagram</a>
        </p>
        <p>
          <a
            href="https://www.facebook.com/profile.php?id=100065104236512&locale=es_LA"
            target="_blank"
            rel="noopener noreferrer">Facebook</a>
        </p>
      </div>
      <div class="footer-social">
        <h3>Conoce más de Maleua</h3>
        <div class="social-icons">
          {
            socialLinks.map(({ url, Icon }) => (
              <a href={url} target="_blank" rel="noopener noreferrer">
                <Icon size={24} class="social-icon" />
              </a>
            ))
          }
        </div>
        <div class="contact-info">
          <p>
            <a
              href="https://www.maleua.org/"
              target="_blank"
              rel="noopener noreferrer">www.maleua.org</a>
          </p>
          <p><a href="mailto:info@maleua.org">info@maleua.org</a></p>
          <p><a href="tel:+573012663664">(+57) 302 663664</a></p>
        </div>
      </div>
    </div>
    <div class="footer-image-container">
      <img
        src="/images/splash-icon-dark.png"
        alt="VeciApp Footer Icon"
        class="footer-splash-icon"
      />
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 60px 0;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    position: relative;
  }

  .footer-content {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    position: relative;
    z-index: 2;
  }

  .footer h3 {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
    color: var(--primary);
    font-weight: 600;
  }

  .footer p {
    margin-bottom: 0.8rem;
    color: var(--primary);
  }

  .footer a {
    color: var(--primary);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer a:hover {
    color: var(--accent);
  }

  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icon {
    color: var(--primary);
    transition:
      transform 0.3s ease,
      color 0.3s ease;
  }

  .social-icons a:hover .social-icon {
    transform: scale(1.1);
    color: var(--accent);
  }

  .footer-image-container {
    position: absolute;
    bottom: -60px;
    right: 2rem;
    z-index: 1;
  }

  .footer-splash-icon {
    width: 200px;
    height: auto;
    opacity: 0.2;
  }

  .contact-info {
    margin-top: 1rem;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-icons {
      justify-content: center;
    }

    .footer-image-container {
      display: none;
    }
  }
</style>
