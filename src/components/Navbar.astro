---
const menuItems = [
    { label: "Inicio", url: "/" },
    { label: "Youtube", url: "https://www.youtube.com/@funmaleua" },
    { label: "Nosotros", url: "https://maleua.org/es" },
    { label: "Contacto", url: "mailto:info@maleua.org" }
];
---

<nav class="navbar">
    <div class="navbar-container">
        <div class="logo">
            <a href="/">VeciApp</a>
        </div>
        
        <!-- Desktop Menu -->
        <div class="menu-desktop">
            {menuItems.map(item => (
                <a 
                    href={item.url} 
                    class="menu-item" 
                    target={item.url !== "/" ? "_blank" : undefined}
                    rel={item.url !== "/" ? "noopener noreferrer" : undefined}
                >{item.label}</a>
            ))}
        </div>

        <!-- Mobile Menu Button -->
        <button class="hamburger" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
        </button>

        <!-- Mobile Menu -->
        <div class="menu-mobile">
            {menuItems.map(item => (
                <a 
                    href={item.url} 
                    class="menu-item"
                    target={item.url !== "/" ? "_blank" : undefined}
                    rel={item.url !== "/" ? "noopener noreferrer" : undefined}
                >{item.label}</a>
            ))}
        </div>
    </div>
</nav>

<script>
    const hamburger = document.querySelector('.hamburger');
    const mobileMenu = document.querySelector('.menu-mobile');

    hamburger?.addEventListener('click', () => {
        hamburger.classList.toggle('active');
        mobileMenu?.classList.toggle('active');
    });
</script>

<style>
    .navbar {
        width: 100%;
        background-color: var(--primary);
        padding: 1rem 0;
        position: fixed;
        top: 0;
        z-index: 1000;
    }

    .navbar-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo a {
        color: var(--accent);
        text-decoration: none;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .menu-desktop {
        display: flex;
        gap: 2rem;
    }

    .menu-item {
        color: var(--secondary);
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .menu-item:hover {
        color: var(--accent);
    }

    .hamburger {
        display: none;
        flex-direction: column;
        justify-content: space-around;
        width: 2rem;
        height: 2rem;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        z-index: 10;
    }

    .hamburger span {
        width: 2rem;
        height: 0.25rem;
        background: var(--secondary);
        border-radius: 10px;
        transition: all 0.3s linear;
        position: relative;
        transform-origin: 1px;
    }

    .menu-mobile {
        display: none;
    }

    @media (max-width: 768px) {
        .menu-desktop {
            display: none;
        }

        .hamburger {
            display: flex;
        }

        .menu-mobile {
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            right: -100%;
            height: 100vh;
            width: 100%;
            background: var(--primary);
            padding: 5rem 2rem;
            transition: right 0.3s ease-in-out;
        }

        .menu-mobile.active {
            right: 0;
        }

        .menu-mobile .menu-item {
            padding: 1rem 0;
            font-size: 1.2rem;
        }

        .hamburger.active span:first-child {
            transform: rotate(45deg);
        }

        .hamburger.active span:nth-child(2) {
            opacity: 0;
        }

        .hamburger.active span:nth-child(3) {
            transform: rotate(-45deg);
        }
    }
</style>