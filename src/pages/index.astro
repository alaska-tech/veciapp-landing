---
import '../styles/main.css'
import '../styles/animations.css'
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const heading = "VeciApp";
const subheadingMobile = "VeciApp es una app social y comunitaria que conecta a migrantes venezolanos, colombianos retornados y comunidades receptoras en Santa Marta con oportunidades de venta y compra de bienes y servicios.";
const subheadingComplete = `VeciApp es una app social y comunitaria que conecta a migrantes venezolanos, colombianos retornados y comunidades receptoras en Santa Marta con oportunidades de venta y compra de bienes y servicios.\n
Promueve la integración socioeconómica, el desarrollo de medios de vida sostenibles y forma parte del programa "Buenos Vecinos" de la Fundación Maleua, con apoyo de USAID y OIM Colombia.`;
const appIcon = "/images/ios-Light.png";
const appScreenshot = "/images/app-screenshot.png";
//const footerImage = "/images/banners.svg";
const badges = [
	{
		link: "https://apps.apple.com/us/app/party-banner/id1610931185",
		image: "/images/app-store-badge.svg"
	},
	{
		link: "https://apps.apple.com/us/app/party-banner/id1610931185",
		image: "/images/google-play-badge.png"
	},
];
const authors = [
	{
		name: "Fundación Maleua",
		url: "https://maleua.org/es"
	}
];
const pageTitle = "VeciApp"
const favicon = "/images/ios-Light.png"
const screenshots = [
    "/images/1.png",
    "/images/2.png",
    "/images/3.png",
    "/images/4.png",
    "/images/5.png",
    "/images/6.png"
];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href={favicon} />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link href="https://fonts.googleapis.com/css2?family=League+Spartan:wght@300;400;700&display=swap" rel="stylesheet">
		<title>{pageTitle}</title>
	</head>
	<body>
		<Navbar />
		<div class="container">
			<main>
				<div class="text-container">
					<img src={appIcon} class="app-icon animate-on-load">
					<h1 class="heading animate-on-load-delay-1">{heading}</h1>
					<h2 class="subheading subheading-mobile animate-on-load-delay-2" style="white-space: pre-line;">{subheadingMobile}</h2>
					<h2 class="subheading subheading-desktop animate-on-load-delay-2" style="white-space: pre-line;">{subheadingComplete}</h2>
					<div class="badge-container">
						{badges.map(badge => (
							<div>
								<a href={badge.link} target="_blank">
									<img src={badge.image} class="badge" />
								</a>
							</div>
						))}
					</div>
					<p class="authors">Hecho con &#x2665; por
						{authors.map((author, index) => (
								<span>
									{index > 0 ? (index === authors.length - 1 ? ' and ' : ', ') : ''}
									<a href={author.url} target="_blank">{author.name}</a>
								</span>
						))}
					</p>
				</div>
				<div class="screenshot-container">
					{screenshots.map((screenshot, index) => (
						<img 
							src={screenshot} 
							class={`app-screenshot ${index === 0 ? 'active' : ''}`} 
							data-index={index}
						/>
					))}
				</div>
			</main>

      <section class="feature-section cream fade-in-up">
        <div class="feature-content">
          <div class="feature-text">
            <h2 class="feature-title">Conectando Comunidades</h2>
            <p class="feature-description">
              VeciApp facilita la comercialización y el acceso a la oferta de bienes y servicios de emprendedores vinculados al programa de buenos vecinos. Promovemos la integración y estabilización socioeconómica de poblaciones vulnerables, conectándolas con su entorno más cercano en Santa Marta.
            </p>
          </div>
          <div class="feature-image">
            <img src="/images/7.jpeg" alt="VeciApp Community Features" />
          </div>
        </div>
      </section>

      <section class="feature-section green fade-in-up">
        <div class="feature-content">
          <div class="feature-image">
            <img src="/images/8.jpeg" alt="VeciApp Integration Features" />
          </div>
          <div class="feature-text">
            <h2 class="feature-title">Más que una App, una Comunidad</h2>
            <p class="feature-description">
              En el corazón de la costa Caribe, "veci" representa a quienes ofrecen servicios y ayudan a otros. VeciApp nace del programa "Buenos Vecinos" de la Fundación Maleua, construyendo puentes entre migrantes venezolanos y comunidades locales, fomentando la integración y el desarrollo económico conjunto.
            </p>
            <div class="badge-container">
              {badges.map(badge => (
                <div>
                  <a href={badge.link} target="_blank">
                    <img src={badge.image} class="badge" />
                  </a>
                </div>
              ))}
            </div>
          </div>
        </div>
      </section>

      
				
		<Footer />
		</div>
	</body>
</html>

<script>
	function rotateScreenshots() {
		const screenshots = document.querySelectorAll('.app-screenshot');
		const total = screenshots.length;
		let current = 0;

		setInterval(() => {
			screenshots[current].classList.remove('active');
			current = (current + 1) % total;
			screenshots[current].classList.add('active');
		}, 1400);
	}

	// New scroll animation code
	function handleScrollAnimations() {
		const elements = document.querySelectorAll('.fade-in-up');
		
		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.classList.add('visible');
				}
			});
		}, {
			threshold: 0.1,
			rootMargin: '0px 0px -50px 0px'
		});
	
		elements.forEach(element => {
			observer.observe(element);
		});
	}

	document.addEventListener('DOMContentLoaded', () => {
		rotateScreenshots();
		handleScrollAnimations();
	});
</script>
